<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/hero_image" android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:id="@+id/namez"
                android:layout_width="wrap_content"
                android:text="text"
                android:layout_height="25dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintStart_toEndOf="@+id/hero_image"
                android:layout_marginLeft="18dp" android:layout_marginStart="18dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/powerz"/>
        <TextView
                android:id="@+id/genderz"
                android:layout_width="wrap_content"
                android:text="text"
                android:layout_height="25dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintStart_toEndOf="@+id/hero_image"
                android:layout_marginLeft="18dp" android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/powerz"
        />
        <TextView
                android:id="@+id/powerz"
                android:layout_width="wrap_content"
                android:text="text"
                android:layout_height="25dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintStart_toEndOf="@+id/hero_image"
                android:layout_marginLeft="18dp" android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@+id/namez"
                app:layout_constraintBottom_toTopOf="@+id/genderz"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
